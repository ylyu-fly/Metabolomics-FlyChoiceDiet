getwd()
# Create the sample arrary
samples <- c(paste(10:89, "H", sep = ""), paste(10:89, "B", sep = ""))
# Randomize that into two boxes
samples.random <- sample(samples)
box1 <- samples.random[1:80]
box2 <- samples.random[81:160]
dim(box1) <- c(8, 10)
dim(box2) <- c(8, 10)
write.table(box1, "layout_box1.txt", sep = "\t", quote = F, row.names = F, col.names = F)
write.table(box2, "layout_box2.txt", sep = "\t", quote = F, row.names = F, col.names = F)
